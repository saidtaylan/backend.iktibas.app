# Multi-Provider Integration Environment Variables
# Bu dosyayı .env.local olarak kopyalayın ve gerçek değerleri doldurun

# Integration service için encryption key (32 karakter)
INTEGRATION_ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Provider API Keys - Test için
NOTION_TEST_API_KEY="secret_your-notion-api-key"

# Google OAuth credentials - Test için  
GOOGLE_OAUTH_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-oauth-client-secret"

# OneDrive OAuth credentials - Test için
ONEDRIVE_CLIENT_ID="your-onedrive-client-id"
ONEDRIVE_CLIENT_SECRET="your-onedrive-client-secret"

# Webhook URLs (production'da dolu olmalı)
INTEGRATION_WEBHOOK_URL="https://your-app.com/api/integration/webhook"

# Rate limiting (provider API limitlerini aşmamak için)
NOTION_RATE_LIMIT_PER_MINUTE=100
GOOGLE_RATE_LIMIT_PER_MINUTE=60
ONEDRIVE_RATE_LIMIT_PER_MINUTE=50
